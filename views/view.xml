<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="tutorial_javascript_form" model="ir.ui.view">
            <field name="name">tutorial.javascript.form</field>
            <field name="model">tutorial.javascript</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                            </group>
                            <group>
                                <field name="field_one" widget="d_format"/>
                            </group>

                            <notebook>
                                <page string="first">
                                    <field name="parent_ids">
                                        <tree editable="bottom">
                                            <field name="product_id"/>
                                            <field name="name"/>
                                            <field name="parent"/>
                                        </tree>
                                    </field>
                                </page>
                                <page string="second">
                                    <field name="child_ids">
                                        <tree editable="bottom">
                                            <field name="product_id"/>
                                            <field name="name"/>
                                            <field name="parent"/>
                                        </tree>
                                    </field>
                                </page>
                            </notebook>
                            <button name="check_unbalance_journal" string="check_unbalance_journal" type="object"/>
                            <button name="download_eFaktur" string="Download eFaktur" type="object"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="tutorial_javascript_menu_action" model="ir.actions.act_window">
            <field name="name">Tutorial Javascript</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">tutorial.javascript</field>
        </record>

        <menuitem id="tutorial_javascript_root" name="Tutorial Javascript" web_icon="tutorial_javascript,static/description/icon.png" />


        <menuitem id="tutorial_javascript_menu" name="Tutorial Javascript" parent="tutorial_javascript_root" action="tutorial_javascript_menu_action" />
    </data>
</odoo>